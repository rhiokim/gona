{
  "name": "todo",
  "version": "0.2.1",
  "main": "bootstrapper.js",
  "repository": "git@github.com:rhiokim/todo.git",
  "author": "Rhio Kim <rhio.kim@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint": "eslint --format=node_modules/eslint-formatter-pretty 'src/**/*.@(js|jsx)'",
    "flow": "flow",
    "lint:msg": "validate-commit-msg",
    "format": "prettier-eslint --write 'src/**/*.@(js|jsx)'",
    "test": "mocha",
    "start": "electron .",
    "coverage": "nyc --reporter=json --reporter=lcov --reporter=text mocha",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "commit": "git cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1",
    "precommit": "npm run format && npm run lint && flow",
    "prepush": "npm test",
    "commitmsg": "npm run lint:msg",
    "pkg:mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/mac/icon.png.icns --prune=true --out-release-builds"
  },
  "config": {
    "validate-commit-msg": {
      "preset": "angular",
      "warnOnFail": false,
      "maxSubjectLength": 100
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "babel-eslint": "^7.2.0",
    "chai": "^3.5.0",
    "commitizen": "^2.9.6",
    "conventional-changelog-cli": "^1.3.1",
    "coveralls": "^2.13.0",
    "electron": "^1.6.6",
    "electron-installer-dmg": "^0.2.1",
    "electron-packager": "^8.6.0",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-config-standard-flow": "^1.0.1",
    "eslint-formatter-pretty": "^1.1.0",
    "eslint-plugin-flowtype": "^2.32.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "flow-bin": "^0.44.2",
    "husky": "^0.13.3",
    "istanbul": "^0.4.5",
    "mocha": "^3.3.0",
    "nyc": "^10.2.0",
    "prettier-eslint-cli": "^3.4.2",
    "sinon": "^2.1.0",
    "sinon-chai": "^2.9.0",
    "validate-commit-msg": "^2.12.1"
  },
  "dependencies": {
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.24.1",
    "eslint-config-react-app": "^0.6.2",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "lowdb": "^0.16.2",
    "node-watch": "^0.5.3",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-redux": "^5.0.4",
    "redux": "^3.6.0",
    "redux-devtools-extension": "^2.13.0",
    "redux-logger": "^3.0.1",
    "redux-thunk": "^2.2.0"
  }
}
