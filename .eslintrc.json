{
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "es6": true
  },
  "ecmaFeatures": {
    "modules": true,
    "destructuring": true
  },
  "globals": {
  },
  "plugins": [
    "flowtype",
    "react"
  ],
  "extends": [
    "standard",
    "standard-flow",
    "react-app"
  ],
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": false
    }
  },
  "rules": {
    "object-property-newline": "off"
  }
}
